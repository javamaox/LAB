<?xml version="1.0" encoding="GB2312"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.4"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee   http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml,/WEB-INF/cfg_cmservice/*.xml</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<filter>
		<filter-name>Set Character Encoding</filter-name>
		<filter-class>com.qtrmoon.common.SystemConfigFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>gb2312</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>Set Character Encoding</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<filter>
		<filter-name>userRightValidate</filter-name>
		<filter-class>com.qtrmoon.sysManage.UserRightValidateFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>userRightValidate</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>userRightValidate</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>config/dictEditor</param-name>
			<param-value>/dictEditor/cfg_dictEditor/struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>config/sysManage</param-name>
			<param-value>/sysManage/cfg_sysManage/struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/struts-config.xml</param-value>
		</init-param>
		<init-param>
			<param-name>debug</param-name>
			<param-value>3</param-value>
		</init-param>
		<init-param>
			<param-name>detail</param-name>
			<param-value>3</param-value>
		</init-param>
		<load-on-startup>0</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>DisplayChart</servlet-name>
		<servlet-class>org.jfree.chart.servlet.DisplayChart</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DisplayChart</servlet-name>
		<url-pattern>/DisplayChart</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>flashSign</servlet-name>
		<servlet-class>com.qtrmoon.flashSign.FlashSignServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>flashSign</servlet-name>
		<url-pattern>/flashSign</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>smartInput</servlet-name>
		<servlet-class>com.qtrmoon.toolkit.smartinput.SIServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>smartInput</servlet-name>
		<url-pattern>/smartInput</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
